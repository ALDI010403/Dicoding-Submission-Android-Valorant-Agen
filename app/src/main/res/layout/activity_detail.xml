<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF1E4"
    tools:context=".activity.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/agen_bg"
            android:layout_width="416dp"
            android:layout_height="240dp"
            android:src="@drawable/jett_bg"
            app:layout_constraintBottom_toTopOf="@+id/agen_biografi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/agen_pic"
            android:layout_width="202dp"
            android:layout_height="311dp"
            android:layout_marginTop="172dp"
            android:src="@drawable/jett_agen"
            app:layout_constraintEnd_toEndOf="@+id/agen_bg"
            app:layout_constraintHorizontal_bias="0.911"
            app:layout_constraintStart_toStartOf="@+id/agen_bg"
            app:layout_constraintTop_toTopOf="@+id/agen_bg"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/agen_role"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/duelist"
            app:layout_constraintBottom_toTopOf="@+id/textView11"
            app:layout_constraintStart_toEndOf="@+id/agen_peran"
            app:layout_constraintTop_toTopOf="@+id/agen_peran"
            app:layout_constraintVertical_bias="0.142"
            app:tint="@color/black"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/agen_country"
            android:layout_width="134dp"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/korea_selatan"
            app:layout_constraintEnd_toEndOf="@+id/textView11"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/agen_peran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="DUELIST"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="// PERAN"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/agen_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/agen_name"
            app:layout_constraintTop_toBottomOf="@+id/agen_name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="// BIOGRAFI"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/agen_biografi"

            app:layout_constraintEnd_toStartOf="@+id/agen_pic"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/agen_biografi"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/agen_biografi"
            android:layout_width="363dp"
            android:layout_height="129dp"
            android:layout_marginTop="564dp"
            android:text="@string/biografi"
            android:textSize="16sp"
            android:textStyle="normal"

            app:layout_constraintEnd_toEndOf="@+id/agen_pic"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/agen_name"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:text="JETT"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/agen_pic"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintStart_toStartOf="@+id/agen_bg"
            app:layout_constraintTop_toBottomOf="@+id/agen_bg"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="// NEGARA AGEN"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/agen_role"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/agen_peran"
            app:layout_constraintTop_toBottomOf="@+id/agen_peran"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="752dp"
            android:text="share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/agen_bg"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>